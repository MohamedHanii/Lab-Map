<%- include ("partials/header.ejs") %>
    <%- include ("partials/navbar.ejs") %>


        <div class="container mt-4 mb-4">
            <h1 class="text-center mb-5"> Search For Technician</h1>
            <div class="row">
                <form method="post" action="/search/">
                    <div class="row">
                        <div class="col-6">
                            <input name="name" class="form-control " type="search" placeholder="Search for technician"
                                aria-label="Search">
                        </div>
                        <div class="col-2">
                            <input name="price" class="form-control " type="search" placeholder="Price"
                                aria-label="Search">
                        </div>
                        <div class="col-2">
                            <input name="exp" class="form-control" type="search" placeholder="Experience"
                                aria-label="Search">
                        </div>

                        <div class="col-2">
                            <button class="btn btn-outline-success searcbtn" type="submit">Search</button>
                        </div>
                </form>
            </div>
        </div>

        <div class="mt-4">
            <% arr.forEach(function(tech){ %>
                <div class="card" style="width: 100%; height: 12rem; ">
                    <div class="card-body">
                        <h5 class="card-title" ">Technician Profile</h5>
                        <p class=" card-text" style="float: left; margin-left: 4rem;">
                            <%= "First Name: " + tech.firstName%>
                                </p>
                                <p class="card-text" style="float: left; margin-left: 4rem;">
                                    <%= "Last Name: " + tech.lastName%>
                                </p>
                                <p class="card-text" style="float: left; margin-left: 4rem;">
                                    <%= "Email: " + tech.email%>
                                </p>
                                <p class="card-text" style="float: left; margin-left: 4rem; margin-right: 4rem">
                                    <%= "Phone: " + tech.phone1%>
                                </p>
                                <p class="card-text" style="float: none; margin-left: 4rem;">
                                    <%= "City: " + tech.city%>
                                </p>
                                <p class="card-text" style="float: left; margin-left: 4rem;">
                                    <%= "Neighbourhood: " + tech.neighbourhood%>
                                </p>
                                <p class="card-text" style="float: left; margin-left: 4rem;">
                                    <%= "Street Address: " + tech.streetAddress%>
                                </p>
                                <p class="card-text" style="float: left; margin-left: 4rem;">
                                    <%= "Graduated From: " + tech.graduatedFrom%>
                                </p>
                                <p class="card-text" style="float: left; margin-left: 4rem;">
                                    <%= "Price: " + tech.price%>
                                </p>
                                <p class="card-text" style="float: left; margin-left: 4rem; margin-right: 30rem">
                                    <%= "Experience Years: " + tech.expYears%>
                                </p>
                                <a href="#" class="btn btn-dark" style="float:right;">Go to Profile</a>
                    </div>
                </div>
                <br>
                <% }); %>
        </div>

        <%- include ("partials/footer.ejs") %>